{
  "name": "gitmonitor",
  "version": "0.0.1",
  "description": "Notifies you if you forgot to push your code to origin",
  "main": "index.js",
  "dependencies": {
    "bluebird": "^3.0.5",
    "crontab": "^1.1.2",
    "expect.js": "^0.3.1",
    "git-utils": "^4.0.7",
    "lodash": "^3.10.1",
    "mkdirp": "^0.5.1",
    "mocha": "^2.3.4",
    "nconf": "^0.8.2",
    "node-fetch": "^1.3.3",
    "nodegit": "^0.5.0",
    "qrcode-terminal": "^0.10.0",
    "yargs": "^3.30.0"
  },
  "bin": {
    "gitmonitor": "./bin/index"
  },
  "preferGlobal": true,
  "devDependencies": {
    "bluebird": "^3.0.6",
    "fs-extra": "^0.26.2",
    "nock": "^3.4.0"
