{
  "name": "gitmonitor",
  "version": "1.0.5",
  "description": "Notifies you if you forgot to push your code to origin",
  "main": "index.js",
  "dependencies": {
    "bluebird": "^3.0.5",
    "crontab": "^1.1.2",
    "expect.js": "^0.3.1",
    "git-utils": "^4.0.7",
    "lodash": "^3.10.1",
    "mkdirp": "^0.5.1",
    "mocha": "^2.3.4",
    "nconf": "^0.8.2",
    "node-fetch": "^1.3.3",
    "nodegit": "^0.5.0",
    "qrcode-terminal": "^0.10.0",
    "yargs": "^3.30.0"
  },
  "bin": {
    "gitmonitor": "./bin/index"
  },
  "preferGlobal": true,
  "devDependencies": {
    "fs-extra": "^0.26.2",
    "nock": "^3.4.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"

  },
  "scripts": {
    "patch-release": "npm version patch && npm publish && git push --follow-tags",
    "test": "./node_modules/mocha/bin/mocha -c --bail -r ./tests/testrunner.js ./tests/_*",
    "test-watch": "./node_modules/mocha/bin/mocha -c --watch --bail -r ./tests/testrunner.js ./tests/_*"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "ecmaFeatures": {
      "modules": true
    },
    "globals": {
      "describe": true,
      "it": true,
      "sinon": true
    },
    "parser": "babel-eslint",
    "rules": {
      "strict": [
        2,
        "global"
      ],
      "indent": [
        2,
        2
      ],
      "quotes": [
        2,
        "single"
      ]
    }
  },
  "author": "Manuel Villing <hi@manuelvilling.de>",
  "license": "MIT",
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/theotow/gitmonitor-client.git"
  },
  "keywords": [
    "gitmonitor",
    "git",
    "helper"
  ],
  "bugs": {
    "url": "https://github.com/theotow/gitmonitor-client/issues"
  },
  "homepage": "https://github.com/theotow/gitmonitor-client#readme"
}
